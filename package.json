{
  "name": "@sylphx/webgpu",
  "version": "0.1.0",
  "description": "WebGPU for Node.js via wgpu-rs (modern, lightweight alternative to Dawn)",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/webgpu.git"
  },
  "license": "MIT",
  "keywords": [
    "webgpu",
    "gpu",
    "wgpu",
    "graphics",
    "compute",
    "shader",
    "napi-rs",
    "rust"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "napi": {
    "name": "webgpu",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf",
        "x86_64-unknown-linux-musl",
        "x86_64-unknown-freebsd",
        "i686-pc-windows-msvc",
        "armv7-linux-androideabi",
        "aarch64-linux-android",
        "x86_64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc",
        "x86_64-apple-darwin"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "bun test",
    "test:node": "node test/basic.test.js",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "version-packages": "changeset version && napi version",
    "release": "changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@napi-rs/cli": "^2.18.0",
    "vercel": "^48.10.3",
    "vitepress": "^1.6.4"
  },
  "packageManager": "npm@10.2.5",
  "files": [
    "index.js",
    "index.d.ts"
  ]
}
